@page
@model SupermarketWEB.Pages.PayModes.EditModel
@{
	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Pay Mode</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="PayMode.id" />
			<div class="form-group">
				<label asp-for="PayMode.name" class="control-label"></label>
				<input asp-for="PayMode.name" class="form-control" />
				<span asp-validation-for="PayMode.name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PayMode.Observation" class="control-label"></label>
				<input asp-for="PayMode.Observation" class="form-control" />
				<span asp-validation-for="PayMode.Observation" class="text-danger"></span>
			</div>
			<div class="form-group mt-3">
				<input type="submit" value="Save" class="btn btn-success" />
				<a asp-page="./Index" class="btn btn-primary"> Back to List</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
